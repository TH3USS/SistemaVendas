@model IEnumerable<Produto>

<h2>Produtos</h2>
<table>
    <tr>
        <th>Nome</th>
        <th>Preço</th>
        <th>Estoque</th>
    </tr>
    @foreach (var produto in Model)
    {
        <tr>
            <td>@produto.Nome</td>
            <td>@produto.Preco</td>
            <td>@produto.Estoque</td>
        </tr>
    }
</table>
<a href="/Produto/Create">Novo Produto</a>
